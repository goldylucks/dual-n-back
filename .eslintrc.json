{
  "extends": ["standard", "standard-react"],
  "parser": "babel-eslint",
  "env": {
    "mocha": true,
    "node": true
  },
  "globals": {
    "expect": true,
    "__DEV__": true,
    "spy": true,
    "stub": true,
    "dispatch": true,
    "localStorage": true
  },
  "rules": {
    "no-return-assign": 0,
    "react/jsx-no-bind": 0, 
    "generator-star-spacing": 0,
    "object-curly-spacing": [2, "always"],
    "arrow-parens": [2, "as-needed"],
    "no-debugger": 2,
    "no-alert": 2,
    "jsx-quotes": [2, "prefer-single"],
    "react/jsx-curly-spacing": [2, "always"],
    "comma-dangle": [2, "always-multiline"]
  }
}
